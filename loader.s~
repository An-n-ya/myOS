%include "boot.inc"
section loader vstart=LOADER_BASE_ADDR

; 输出背景色绿色，前景色红色，并且跳动的字符串”2 LOADER“
mov byte [gs:0x00], '2'
mov byte [gx:0x01], 0xA4

mov byte [gs:0x02], ' '
mov byte [gx:0x03], 0xA4

mov byte [gs:0x04], 'L'
mov byte [gx:0x05], 0xA4

mov byte [gs:0x06], 'O'
mov byte [gx:0x07], 0xA4

mov byte [gs:0x08], 'A'
mov byte [gx:0x09], 0xA4

mov byte [gs:0x0a], 'D'
mov byte [gx:0x0b], 0xA4

mov byte [gs:0x0c], 'E'
mov byte [gx:0x0d], 0xA4

mov byte [gs:0x0e], 'R'
mov byte [gx:0x0f], 0xA4

jmp $					; 悬停程序
